<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Crypto_DCA_Calculator_MobileApp.Views.LoginPage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	HideSoftInputOnTapped="True"
	Shell.NavBarIsVisible="False">
	<StackLayout Orientation="Vertical">
		<Label
			Margin="30,100,30,0"
			FontAttributes="Bold"
			FontFamily="Font1"
			FontSize="20"
			Text=" Welcome to Crypto DCA Calculator!"
			TextColor="White"
			VerticalTextAlignment="Center" />
		<Border Margin="30,100,30,0" StrokeShape="RoundRectangle 12">
			<Entry
				x:Name="EmailEntry"
				BackgroundColor="White"
				HeightRequest="60"
				Keyboard="Email"
				Placeholder="Email"
				Text="{Binding Email}"
				TextColor="Black" />
		</Border>
		<Border Margin="30,30,30,0" StrokeShape="RoundRectangle 12">
			<Entry
				x:Name="PasswordEntry"
				BackgroundColor="White"
				HeightRequest="60"
				IsPassword="True"
				Keyboard="Password"
				Placeholder="Password"
				Text="{Binding Password}"
				TextColor="Black" />
		</Border>

		<Button
			Margin="0,30,0,0"
			Command="{Binding LogInCommand}"
			Text="Log In"
			WidthRequest="150" />
	</StackLayout>
</ContentPage>